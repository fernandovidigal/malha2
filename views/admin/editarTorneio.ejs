<%- include('../includes/header.ejs') %>
<%- include('../includes/validationErrors.ejs') %>

<% if(typeof torneio != 'undefined'){ %>
    <form action="/admin/torneios/editarTorneio/<%= torneio.torneioId %>?_method=PUT" method="post">
        <label for="designacao">Designação</label>
        <input type="text" name="designacao" value="<%= torneio.designacao %>" required><br>
        <label for="localidade">Localidade</label>
        <input type="text" name="localidade" pattern="^[^0-9]+$" value="<%= torneio.localidade %>" required><br>
        <label for="ano">Ano</label>
        <input type="text" name="ano" pattern="^[0-9]{4}$" value="<%= torneio.ano %>" required><br>
        <label for="campos">Número de campos: </label>
        <input type="text" name="campos" value="<%= torneio.campos %>" required><br>
        <input type="submit" value="Actualizar">
    </form>
<% } else { %>
        <h2>Oops...Algo correu mal!</h2>
<% } %>

<%- include('../includes/footer.ejs') %>