{
  "name": "malha2",
  "version": "1.0.0",
  "description": "Aplicação para gestão de Torneios de Malha",
  "main": "app.js",
  "bin": "app.js",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "start": "concurrently \"nodemon app.js\" \"npm run watch:js\" \"npm run watch:css\"",
    "watch:js": "parcel watch ./devAssets/js/*.js --out-dir ./assets/js/ --no-source-maps --no-hmr",
    "watch:css": "parcel watch ./devAssets/css/styles.css --out-dir ./assets/css/ --out-file styles.css --no-source-maps --no-hmr"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernandovidigal/malha2.git"
  },
  "author": "Fernando Vidigal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fernandovidigal/malha2/issues"
  },
  "homepage": "https://github.com/fernandovidigal/malha2#readme",
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-flash": "^0.1.1",
    "cssnano": "^4.1.10",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "express-breadcrumbs": "0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.0",
    "method-override": "^3.0.0",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pdfmake": "^0.1.66",
    "sequelize": "^6.3.3",
    "sqlite3": "^5.0.0",
    "sweetalert2": "^9.17.0"
  },
  "pkg": {
    "scripts": [],
    "assets": [
      "views/**/*",
      "assets/**/*"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "concurrently": "^5.2.0",
    "faker": "^4.1.0",
    "lodash": "^4.17.19",
    "parcel-bundler": "^1.12.4"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "postcss": {
    "modules": false,
    "plugins": {
      "autoprefixer": {
        "flexbox": "no-2009"
      },
      "cssnano": {
        "preset": [
          "default",
          {
            "discardComments": {
              "removeAll": true
            }
          }
        ]
      }
    }
  }
}
